<h1><%= @cocktail.name %></h1>
        <% if @cocktail.photo.file %>
          <%= cl_image_tag(@cocktail.photo) %>
        <% elsif @cocktail.image_url == nil %>
          <div class="card" style="background-image: url(https://www.interserver.net/tips/wp-content/uploads/2016/10/404error.jpeg)"> 
          <% else %>
          <div class="card" style="background-image: url(<%= @cocktail.image_url %>)"> 
        <% end %>
            <p class="cocktail-name"><%= @cocktail.name %></p>
          </div>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
<% end %>

