<div class="container" id="new-container">
<h1>Add a cocktail</h1>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :description, as: :text %>
    <%= f.input :flavor, collection: Cocktail::FLAVORS%>
    <%= f.input :alcohol_level, collection: Cocktail::LEVELS %>
    <%= f.input :main_spiritus, collection: Cocktail::SPIRITUS, multiple: true %> 
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to 'Back', cocktails_path %>
